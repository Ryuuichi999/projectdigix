generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  role       String  
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  orders Order[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  price       Float
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  orderDetails OrderDetail[]
  stock        Stock?
  categories   BookCategory[]
}

model Order {
  id          Int      @id @default(autoincrement())
  user_id     Int
  total_price Float
  status      String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user         User          @relation(fields: [user_id], references: [id])
  orderDetails OrderDetail[]
  receipt      Receipt?
}

model OrderDetail {
  id       Int   @id @default(autoincrement())
  order_id Int
  book_id  Int
  quantity Int
  price    Float

  order Order @relation(fields: [order_id], references: [id])
  book  Book  @relation(fields: [book_id], references: [id])
}

model Stock {
  id       Int @id @default(autoincrement())
  book_id  Int @unique
  quantity Int

  book Book @relation(fields: [book_id], references: [id])
}

model Category {
  id            Int    @id @default(autoincrement())
  category_name String
  description   String

  bookCategories BookCategory[]
}

model BookCategory {
  book_id     Int
  category_id Int

  book     Book     @relation(fields: [book_id], references: [id])
  category Category @relation(fields: [category_id], references: [id])

  @@id([book_id, category_id])
}

model Receipt {
  id             Int      @id @default(autoincrement())
  order_id       Int      @unique
  receipt_number String
  total_amount   Float
  issued_at      DateTime

  order Order @relation(fields: [order_id], references: [id])
}
